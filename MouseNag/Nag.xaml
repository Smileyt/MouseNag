<Window x:Class="MouseNag.Annoy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Annoy" Height="400" Width="500">
    <Grid>
        
        <Label Content="Are you sure you need the mouse?" FontFamily="Comic Sans MS" Foreground="DarkRed" FontSize="56" HorizontalAlignment="Center" VerticalAlignment="Center" Name="messageLabel" />
        <Button Name="closeButton" Width="80" Height="40" VerticalAlignment="Bottom" Margin="100" Click="CloseButton_Click">Close</Button>
    </Grid>
</Window>
